body
  padding 24px
  margin 0
  top 0
  bottom 0
  box-sizing border-box
  font 14px/16px 'Helvetica Neue', 'Helvetica', Arial, sans-serif
  color rgba(206,199,183,1)  
  color #666
  text-shadow  0px 2px 2px rgba(255, 255, 255, 0.4);
  background rgba(229,221,208, .3)
  border-right 6px solid rgb(162,40,101)
  p 
    margin 0 0 24px 0
    padding 0
  a 
    color rgb(106,166,144)
  h1 
    font 36px/36px 'Helvetica Neue', 'Helvetica', Arial, sans-serif
    color rgb(242,144,87)
    font-weight normal
    
  h2 
    font 24px/28px 'Helvetica Neue', 'Helvetica', Arial, sans-serif
    margin 0
    padding 0
    font-weight normal
    
  .mainheader
    float left
    width 15%
    margin-top 8px
    
    h1, p 
      display inline-block
      margin 24px 12px
      padding 0
      &.share 
        display block
        float right
        text-align right
        
  .mainarea
    margin-top 36px
    float left
    width 85%
    background #fff url(/images/divider.png) center center repeat-y
    position relative
    

    section
      float left
      width 50%
      margin-top -32px
      min-height 100px
 
      header 
        padding-left 24px
      
      & > div
        padding 24px
        cursor text
    
        &:focus
          outline none
      
        &.workarea
          font-family 'PTMono', monospace
          color black
      p 
        margin 0
      
      .group_wrapper
        /*
        border-left 3px solid orange
        border-right 3px solid blue
        */
      span
        display inline-block
      
      span.indent
        border 1px solid #dedede
        height 100%
        content "foo"
        
      span.suggestion
        color #666
      
      span.comment
        color #ccc
        float right
        display inline-block
        width 60%
        text-align left
    
        &.warn
          color #884
        
        &.testarea
        
          .match
            border 1px solid #cc2
            background #ffc
            border-radius 2px
      
  footer
    position fixed
    bottom 0
    left 0
    right 0
    clear both
    border-top 1px solid #eaeaea
    border-bottom 1px solid #ddd
    background #fefefe
    /*
        background-image -moz-linear-gradient(top,#fefefe,#efefef)
        background-image -webkit-gradient(linear,left top,left bottom,from(#fefefe),to(#efefef))  
    */
    overflow hidden
    padding 6px 2.5%
    ul, li
      list-style none
      display inline-block
      margin 0
      padding 0
    li 
      padding-right 12px
  
    nav
      float left
    
    address
      float right
      text-align right

  .group:before
  .group:after 
    content ""
    display table
  
  .group:after
    clear both
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
